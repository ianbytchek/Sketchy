{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "incremental": true,
        "target": "esnext",
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"],
        "lib": ["esnext"]
    },
    "exclude": ["./node_modules"]
}
